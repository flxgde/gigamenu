{
  "name": "@flxgde/gigamenu",
  "version": "0.1.0",
  "description": "A keyboard-driven command palette menu for Angular applications",
  "keywords": [
    "angular",
    "command-palette",
    "keyboard-navigation",
    "menu",
    "spotlight",
    "ctrl-k"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flxgde/gigamenu"
  },
  "homepage": "https://github.com/flxgde/gigamenu#readme",
  "bugs": {
    "url": "https://github.com/flxgde/gigamenu/issues"
  },
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/gigamenu/styles.css --minify",
    "build:lib": "ng-packagr",
    "build:patch-exports": "node -e \"const p='./dist/gigamenu/package.json';const pkg=require(p);pkg.exports['./styles.css']='./styles.css';require('fs').writeFileSync(p,JSON.stringify(pkg,null,2))\"",
    "build": "npm run build:lib && npm run build:css && npm run build:patch-exports",
    "build:prod": "ng-packagr -c tsconfig.lib.prod.json && npm run build:css && npm run build:patch-exports"
  },
  "sideEffects": false,
  "peerDependencies": {
    "@angular/common": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/router": "^21.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "ng-packagr": "^21.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.2"
  }
}
